@page "/register"
@using System.ComponentModel.DataAnnotations
@inject Faunex.Web.Api.FaunexApiClient Api
@inject Faunex.Web.Auth.TokenStore TokenStore
@inject Faunex.Web.Auth.JwtAuthStateProvider AuthStateProvider
@inject NavigationManager Nav

<h3>Register</h3>

<EditForm EditContext="_editContext" OnValidSubmit="RegisterAsync" FormName="register-form">
    <DataAnnotationsValidator />
    <ValidationSummary />

    @if (_error is not null)
    {
        <div class="alert alert-danger" role="alert">@_error</div>
    }

    @if (_success is not null)
    {
        <div class="alert alert-success" role="alert">@_success</div>
    }

    <div class="mb-3">
        <label class="form-label">Email</label>
        <InputText class="form-control" @bind-Value="_model.Email" disabled="@_isSubmitting" />
    </div>

    <div class="mb-3">
        <label class="form-label">Password</label>
        <InputText class="form-control" type="password" @bind-Value="_model.Password" disabled="@_isSubmitting" />
    </div>

    <button class="btn btn-primary" disabled="@_isSubmitting" @onclick="RegisterAsync" @onclick:preventDefault>
        @(_isSubmitting ? "Registering..." : "Register")
    </button>
</EditForm>

@code {
    private bool _isSubmitting;
    private string? _error;
    private string? _success;

    private sealed class RegisterModel
    {
        [Required]
        [EmailAddress]
        public string Email { get; set; } = string.Empty;

        [Required]
        public string Password { get; set; } = string.Empty;
    }

    private readonly RegisterModel _model = new();
    private EditContext _editContext = default!;

    protected override void OnInitialized()
    {
        _editContext = new EditContext(_model);
    }

    private sealed class RegisterRequest
    {
        public string Email { get; set; } = string.Empty;
        public string Password { get; set; } = string.Empty;
    }

    private sealed class AuthResponse
    {
        public string AccessToken { get; set; } = string.Empty;
    }

    private async Task RegisterAsync()
    {
        if (_isSubmitting)
        {
            return;
        }

        _error = null;
        _success = null;
        _isSubmitting = true;

        try
        {
            var response = await Api.PostAsync<RegisterRequest, AuthResponse>(
                "/api/auth/register",
                new RegisterRequest { Email = _model.Email, Password = _model.Password });

            if (response is null || string.IsNullOrWhiteSpace(response.AccessToken))
            {
                _error = "Registration failed.";
                return;
            }

            await TokenStore.SetTokenAsync(response.AccessToken);
            AuthStateProvider.NotifyUserAuthenticationStateChanged();

            _success = "Registered successfully.";
            Nav.NavigateTo("/browse", forceLoad: true);
        }
        catch (Exception ex)
        {
            _error = ex.Message;
        }
        finally
        {
            _isSubmitting = false;
        }
    }
}
