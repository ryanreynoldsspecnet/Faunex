@page "/register"
@using System.ComponentModel.DataAnnotations
@inject Faunex.Web.Api.FaunexApiClient Api
@inject Faunex.Web.Auth.TokenStore TokenStore
@inject Faunex.Web.Auth.JwtAuthStateProvider AuthStateProvider
@inject NavigationManager Nav

<h3>Register</h3>

<EditForm Model="_model" OnValidSubmit="RegisterAsync">
    <DataAnnotationsValidator />
    <ValidationSummary />

    @if (_error is not null)
    {
        <div class="alert alert-danger" role="alert">@_error</div>
    }

    @if (_success is not null)
    {
        <div class="alert alert-success" role="alert">@_success</div>
    }

    <div class="mb-3">
        <label class="form-label">Email</label>
        <InputText class="form-control" @bind-Value="_model.Email" disabled="@_isSubmitting" />
    </div>

    <div class="mb-3">
        <label class="form-label">Password</label>
        <InputText class="form-control" type="password" @bind-Value="_model.Password" disabled="@_isSubmitting" />
    </div>

    <div class="mb-3">
        <label class="form-label">Account type</label>
        <InputSelect class="form-select" @bind-Value="_model.Role" disabled="@_isSubmitting">
            <option value="Buyer">Buyer</option>
            <option value="Seller">Seller</option>
        </InputSelect>
        <div class="form-text">DEV-only role assignment is supported by the API in Development.</div>
    </div>

    <button type="submit" class="btn btn-primary" disabled="@_isSubmitting">
        @(_isSubmitting ? "Registering..." : "Register")
    </button>
</EditForm>

@code {
    private bool _isSubmitting;
    private string? _error;
    private string? _success;

    private sealed class RegisterModel
    {
        [Required]
        [EmailAddress]
        public string Email { get; set; } = string.Empty;

        [Required]
        public string Password { get; set; } = string.Empty;

        [Required]
        public string Role { get; set; } = "Buyer";
    }

    private readonly RegisterModel _model = new();

    private sealed class RegisterRequest
    {
        public string Email { get; set; } = string.Empty;
        public string Password { get; set; } = string.Empty;

        public Guid? TenantId { get; set; }
        public bool IsPlatformAdmin { get; set; }
        public string[] Roles { get; set; } = [];
    }

    private sealed class AuthResponse
    {
        // API returns "accessToken" (camelCase)
        public string AccessToken { get; set; } = string.Empty;
    }

    private sealed class ErrorResponse
    {
        public string? Error { get; set; }
        public string[]? Errors { get; set; }
    }

    private async Task RegisterAsync()
    {
        _error = null;
        _success = null;
        _isSubmitting = true;

        try
        {
            var response = await Api.PostAsync<RegisterRequest, AuthResponse>(
                "/api/auth/register",
                new RegisterRequest
                {
                    Email = _model.Email,
                    Password = _model.Password,
                    TenantId = null,
                    IsPlatformAdmin = false,
                    Roles = [ _model.Role ]
                });

            if (response is null || string.IsNullOrWhiteSpace(response.AccessToken))
            {
                _error = "Registration failed.";
                return;
            }

            await TokenStore.SetTokenAsync(response.AccessToken);
            AuthStateProvider.NotifyUserAuthenticationStateChanged();

            _success = "Registered successfully.";
            Nav.NavigateTo("/browse", forceLoad: true);
        }
        catch (HttpRequestException ex)
        {
            // FaunexApiClient uses EnsureSuccessStatusCode, so 400 comes through here.
            _error = ex.Message;
        }
        catch (Exception ex)
        {
            _error = ex.Message;
        }
        finally
        {
            _isSubmitting = false;
        }
    }
}
