@page "/register"
@using System.ComponentModel.DataAnnotations
@inject Faunex.Web.Api.FaunexApiClient Api
@inject Faunex.Web.Auth.TokenStore TokenStore
@inject Faunex.Web.Auth.JwtAuthStateProvider AuthStateProvider
@inject NavigationManager Nav

<h3>Register</h3>

<EditForm EditContext="_editContext" OnValidSubmit="RegisterAsync" FormName="register-form">
    <DataAnnotationsValidator />
    <ValidationSummary />

    @if (_error is not null)
    {
        <div class="alert alert-danger" role="alert">@_error</div>
    }

    @if (_success is not null)
    {
        <div class="alert alert-success" role="alert">@_success</div>
    }

    <div class="mb-3">
        <label class="form-label">Email</label>
        @* Bind on input so values are reflected in the model before validation/submit. *@
        <InputText class="form-control" @bind-Value="_model.Email" @bind-Value:event="oninput" disabled="@_isSubmitting" />
    </div>

    <div class="mb-3">
        <label class="form-label">Password</label>
        <InputText class="form-control" type="password" @bind-Value="_model.Password" @bind-Value:event="oninput" disabled="@_isSubmitting" />
    </div>

    <div class="mb-3">
        <label class="form-label">Confirm Password</label>
        <InputText class="form-control" type="password" @bind-Value="_model.ConfirmPassword" @bind-Value:event="oninput" disabled="@_isSubmitting" />
        <ValidationMessage For="() => _model.ConfirmPassword" />
    </div>

    @* Important: do not attach @onclick to the submit button.
       Using @onclick + preventDefault can bypass the EditForm validation pipeline and run with stale/empty model values. *@
    <button class="btn btn-primary" type="submit" disabled="@_isSubmitting">
        @(_isSubmitting ? "Registering..." : "Register")
    </button>
</EditForm>

@code {
    private bool _isSubmitting;
    private string? _error;
    private string? _success;

    private sealed class RegisterModel
    {
        [Required]
        [EmailAddress]
        public string Email { get; set; } = string.Empty;

        [Required]
        public string Password { get; set; } = string.Empty;

        [Required]
        [Compare(nameof(Password), ErrorMessage = "Passwords do not match.")]
        public string ConfirmPassword { get; set; } = string.Empty;
    }

    private readonly RegisterModel _model = new();
    private EditContext _editContext = default!;

    protected override void OnInitialized()
    {
        _editContext = new EditContext(_model);
    }

    // Match backend DTO contract exactly (Faunex.Api.Auth.RegisterRequest).
    private sealed record RegisterRequest(string Email, string Password);

    // Match backend DTO contract (Faunex.Api.Auth.AuthResponse) but only bind what we need.
    private sealed record AuthResponse(string AccessToken);

    private async Task RegisterAsync()
    {
        if (_isSubmitting)
        {
            return;
        }

        _error = null;
        _success = null;
        _isSubmitting = true;

        try
        {
            var response = await Api.PostAsync<RegisterRequest, AuthResponse>(
                "/api/auth/register",
                new RegisterRequest(_model.Email, _model.Password));

            if (response is null || string.IsNullOrWhiteSpace(response.AccessToken))
            {
                _error = "Registration failed.";
                return;
            }

            await TokenStore.SetTokenAsync(response.AccessToken);
            AuthStateProvider.NotifyUserAuthenticationStateChanged();

            _success = "Registered successfully.";
            Nav.NavigateTo("/browse", forceLoad: true);
        }
        catch (Exception ex)
        {
            _error = ex.Message;
        }
        finally
        {
            _isSubmitting = false;
        }
    }
}
