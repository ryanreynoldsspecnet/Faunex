@page "/login"
@using System.ComponentModel.DataAnnotations
@inject Faunex.Web.Api.FaunexApiClient Api
@inject Faunex.Web.Auth.TokenStore TokenStore
@inject Faunex.Web.Auth.JwtAuthStateProvider AuthStateProvider
@inject NavigationManager Nav

<h3>Login</h3>

@* EditForm uses an EditContext created from the single _model instance.
   All inputs must bind to that same _model instance (do not reassign _model after creating _editContext). *@
<EditForm EditContext="_editContext" OnValidSubmit="LoginAsync" FormName="login-form">
    <DataAnnotationsValidator />
    <ValidationSummary />

    @if (_error is not null)
    {
        <div class="alert alert-danger" role="alert">@_error</div>
    }

    @if (_success is not null)
    {
        <div class="alert alert-success" role="alert">@_success</div>
    }

    <div class="mb-3">
        <label class="form-label">Email</label>
        @* Use @bind-Value (not @bind) to bind to the EditContext model, and bind on input so values are current at submit time. *@
        <InputText class="form-control" @bind-Value="_model.Email" @bind-Value:event="oninput" disabled="@_isSubmitting" />
    </div>

    <div class="mb-3">
        <label class="form-label">Password</label>
        <InputText class="form-control" type="password" @bind-Value="_model.Password" @bind-Value:event="oninput" disabled="@_isSubmitting" />
    </div>

    @* Validation/submission is driven only by OnValidSubmit; the button must be type="submit" and have no @onclick handler. *@
    <button class="btn btn-primary" type="submit" disabled="@_isSubmitting">
        @(_isSubmitting ? "Logging in..." : "Login")
    </button>
</EditForm>

@code {
    private bool _isSubmitting;
    private string? _error;
    private string? _success;

    private sealed class LoginModel
    {
        [Required]
        [EmailAddress]
        public string Email { get; set; } = string.Empty;

        [Required]
        public string Password { get; set; } = string.Empty;
    }

    // Single model instance for the lifetime of the component instance.
    private readonly LoginModel _model = new();

    // Single EditContext bound to _model; do not recreate it after the form is rendered.
    private EditContext _editContext = default!;

    protected override void OnInitialized()
    {
        _editContext = new EditContext(_model);
    }

    // Match backend DTO contract exactly (Faunex.Api.Auth.LoginRequest).
    private sealed record LoginRequest(string Email, string Password);

    // Match backend DTO contract (Faunex.Api.Auth.AuthResponse) but only bind what we need.
    private sealed record AuthResponse(string AccessToken);

    private async Task LoginAsync()
    {
        if (_isSubmitting)
        {
            return;
        }

        _error = null;
        _success = null;
        _isSubmitting = true;

        try
        {
            var response = await Api.PostAsync<LoginRequest, AuthResponse>(
                "/api/auth/login",
                new LoginRequest(_model.Email, _model.Password));

            if (response is null || string.IsNullOrWhiteSpace(response.AccessToken))
            {
                _error = "Login failed.";
                return;
            }

            await TokenStore.SetTokenAsync(response.AccessToken);
            AuthStateProvider.NotifyUserAuthenticationStateChanged();

            _success = "Logged in successfully.";
            Nav.NavigateTo("/browse", forceLoad: true);
        }
        catch (Exception ex)
        {
            _error = ex.Message;
        }
        finally
        {
            _isSubmitting = false;
        }
    }
}
