@page "/seller/listings"
@using System.Security.Claims
@using Microsoft.AspNetCore.Components.Authorization
@inject Faunex.Web.Api.FaunexApiClient Api
@inject AuthenticationStateProvider AuthenticationStateProvider

<h3>My Listings</h3>

<AuthorizeView>
    <Authorized>
        @if (!_isInSellerOrTenantAdminRole)
        {
            <p>You are signed in, but you don’t have access to seller listings.</p>
        }
        else if (_isLoading)
        {
            <p>Loading...</p>
        }
        else if (_error is not null)
        {
            <p>@_error</p>
        }
        else if (_listings is null || _listings.Count == 0)
        {
            <p>You haven’t created any listings yet.</p>
        }
        else
        {
            <table class="table">
                <thead>
                    <tr>
                        <th>Title</th>
                        <th>Price</th>
                        <th>Status</th>
                        <th>IsActive</th>
                        <th>Created</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in _listings)
                    {
                        var state = GetRowState(item.Id);

                        <tr>
                            <td>
                                <NavLink href="@($"/seller/listings/{item.Id}")">@item.Title</NavLink>
                            </td>
                            <td>@FormatPrice(item)</td>
                            <td>@GetStatus(item)</td>
                            <td>@(item.IsActive ? "Yes" : "No")</td>
                            <td>@GetCreated(item)</td>
                            <td>
                                @if (!item.IsActive)
                                {
                                    <button class="btn btn-sm btn-outline-primary"
                                            disabled="@(state.IsSubmitting)"
                                            @onclick="(() => SubmitForReviewAsync(item.Id))">
                                        @(state.IsSubmitting ? "Submitting..." : "Submit for Review")
                                    </button>

                                    @if (state.SuccessMessage is not null)
                                    {
                                        <div class="text-success mt-1">@state.SuccessMessage</div>
                                    }
                                    else if (state.ErrorMessage is not null)
                                    {
                                        <div class="text-danger mt-1">@state.ErrorMessage</div>
                                    }
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </Authorized>
    <NotAuthorized>
        <p>Please log in to view your listings.</p>
    </NotAuthorized>
</AuthorizeView>

@code {
    private bool _isLoading;
    private string? _error;
    private IReadOnlyList<Faunex.Application.DTOs.ListingDto>? _listings;

    private bool _isInSellerOrTenantAdminRole;

    private readonly Dictionary<Guid, RowState> _rowStates = new();

    protected override async Task OnInitializedAsync()
    {
        await LoadAsync();
    }

    private async Task LoadAsync()
    {
        _isLoading = true;
        _error = null;
        _listings = null;
        _isInSellerOrTenantAdminRole = false;

        try
        {
            var authState = await AuthenticationStateProvider.GetAuthenticationStateAsync();
            var user = authState.User;

            if (user.Identity?.IsAuthenticated != true)
            {
                return;
            }

            _isInSellerOrTenantAdminRole = user.IsInRole("Seller") || user.IsInRole("TenantAdmin");
            if (!_isInSellerOrTenantAdminRole)
            {
                return;
            }

            var actorIdRaw = user.FindFirstValue(ClaimTypes.NameIdentifier);
            if (!Guid.TryParse(actorIdRaw, out var actorId))
            {
                _error = "Could not determine your user id (ActorId).";
                return;
            }

            _listings = await Api.GetAsync<IReadOnlyList<Faunex.Application.DTOs.ListingDto>>($"/api/seller/listings?sellerId={actorId}");
        }
        catch (Exception ex)
        {
            _error = ex.Message;
        }
        finally
        {
            _isLoading = false;
        }
    }

    private sealed class RowState
    {
        public bool IsSubmitting { get; set; }
        public string? SuccessMessage { get; set; }
        public string? ErrorMessage { get; set; }
    }

    private RowState GetRowState(Guid listingId)
    {
        if (_rowStates.TryGetValue(listingId, out var state))
        {
            return state;
        }

        state = new RowState();
        _rowStates[listingId] = state;
        return state;
    }

    private async Task SubmitForReviewAsync(Guid listingId)
    {
        var state = GetRowState(listingId);
        state.IsSubmitting = true;
        state.SuccessMessage = null;
        state.ErrorMessage = null;

        try
        {
            await Api.PostAsync($"/api/seller/listings/{listingId}/submit", body: new { });
            state.SuccessMessage = "Submitted for compliance review";
        }
        catch
        {
            state.ErrorMessage = "Could not submit listing for review. Please try again.";
        }
        finally
        {
            state.IsSubmitting = false;
            StateHasChanged();
        }
    }

    private static string FormatPrice(Faunex.Application.DTOs.ListingDto item)
    {
        var price = item.BuyNowPrice ?? item.StartingPrice;
        return $"{price:0.##} {item.CurrencyCode}";
    }

    private static string GetStatus(Faunex.Application.DTOs.ListingDto item)
    {
        // Do not guess compliance status fields.
        // Treat inactive as Draft/Pending and active as Approved.
        return item.IsActive ? "Approved" : "Draft / Pending";
    }

    private static string GetCreated(Faunex.Application.DTOs.ListingDto item)
    {
        // ListingDto currently does not include CreatedAt.
        return "-";
    }
}
