@page "/seller/my-listings"
@inject Faunex.Web.Api.FaunexApiClient Api

<h3>My Listings (Seller)</h3>

<div style="margin-bottom: 1rem;">
    <label>Seller Id:</label>
    <input style="width: 28rem;" @bind="_sellerIdRaw" />
    <button style="margin-left: 1rem;" @onclick="ReloadAsync">Load</button>
</div>

@if (_isLoading)
{
    <p>Loading...</p>
}
else if (_error is not null)
{
    <p>@_error</p>
}
else if (_result is null || _result.Items.Count == 0)
{
    <p>No listings found.</p>
}
else
{
    <p>Total: @_result.Total | Showing: @_result.Items.Count</p>

    <table>
        <thead>
            <tr>
                <th>Title</th>
                <th>Animal</th>
                <th>Active</th>
                <th>Location</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in _result.Items)
            {
                <tr>
                    <td>@item.Title</td>
                    <td>@item.AnimalClass</td>
                    <td>@(item.IsActive ? "Yes" : "No")</td>
                    <td>@item.Location</td>
                </tr>
            }
        </tbody>
    </table>

    <div style="margin-top: 1rem;">
        <button @onclick="PrevAsync" disabled="@(_skip == 0)">Prev</button>
        <button style="margin-left: 0.5rem;" @onclick="NextAsync" disabled="@(_result is null || _skip + _take >= _result.Total)">Next</button>
    </div>
}

@code {
    private bool _isLoading;
    private string? _error;
    private Faunex.Application.DTOs.PagedResult<Faunex.Application.DTOs.ListingDto>? _result;

    private int _skip;
    private int _take = 20;

    private string _sellerIdRaw = "";

    protected override Task OnInitializedAsync() => ReloadAsync();

    private async Task ReloadAsync()
    {
        _isLoading = true;
        _error = null;

        try
        {
            if (!Guid.TryParse(_sellerIdRaw, out var sellerId))
            {
                _error = "Enter your seller id (a GUID).";
                return;
            }

            var url = $"/api/listings/my?sellerId={sellerId}&skip={_skip}&take={_take}";
            _result = await Api.GetAsync<Faunex.Application.DTOs.PagedResult<Faunex.Application.DTOs.ListingDto>>(url);
        }
        catch (Exception ex)
        {
            _error = ex.Message;
        }
        finally
        {
            _isLoading = false;
        }
    }

    private async Task PrevAsync()
    {
        _skip = Math.Max(0, _skip - _take);
        await ReloadAsync();
    }

    private async Task NextAsync()
    {
        _skip += _take;
        await ReloadAsync();
    }
}
