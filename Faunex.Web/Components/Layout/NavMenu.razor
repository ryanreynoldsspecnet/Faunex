@using System.Security.Claims
@using Microsoft.AspNetCore.Components.Authorization

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">Faunex</a>
    </div>
</div>

<input type="checkbox" title="Navigation menu" class="navbar-toggler" />

<div class="nav-scrollable" onclick="document.querySelector('.navbar-toggler').click()">
    <nav class="nav flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="browse">
                Browse Listings
            </NavLink>
        </div>

        <AuthorizeView>
            <Authorized>
                @{
                    var roles = (context.User.FindAll(ClaimTypes.Role).Select(r => r.Value) ?? Enumerable.Empty<string>()).ToHashSet(StringComparer.OrdinalIgnoreCase);
                    // Support both claim styles used across the app.
                    var isPlatformAdmin = context.User.HasClaim(c => string.Equals(c.Type, "IsPlatformAdmin", StringComparison.OrdinalIgnoreCase) && string.Equals(c.Value, "true", StringComparison.OrdinalIgnoreCase))
                        || context.User.HasClaim(c => string.Equals(c.Type, "is_platform_admin", StringComparison.OrdinalIgnoreCase) && string.Equals(c.Value, "true", StringComparison.OrdinalIgnoreCase));

                    var isSellerOrTenantAdmin = roles.Contains("Seller") || roles.Contains("TenantAdmin");
                    var isPlatformCompliance = roles.Contains("PlatformSuperAdmin") || roles.Contains("PlatformComplianceAdmin");
                }

                @if (isSellerOrTenantAdmin)
                {
                    <div class="nav-item px-3">
                        <NavLink class="nav-link" href="seller/listings">
                            My Listings
                        </NavLink>
                    </div>

                    <div class="nav-item px-3">
                        <NavLink class="nav-link" href="seller/listings/create/bird">
                            Create Listing
                        </NavLink>
                    </div>
                }

                @if (isPlatformAdmin && isPlatformCompliance)
                {
                    <div class="nav-item px-3">
                        <NavLink class="nav-link" href="platform/compliance">
                            Compliance Review
                        </NavLink>
                    </div>
                }

                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="logout">
                        Logout
                    </NavLink>
                </div>
            </Authorized>
            <NotAuthorized>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="login">
                        Login
                    </NavLink>
                </div>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="register">
                        Register
                    </NavLink>
                </div>
            </NotAuthorized>
        </AuthorizeView>
    </nav>
</div>

